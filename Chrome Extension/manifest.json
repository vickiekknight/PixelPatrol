{
  "manifest_version": 3,
  "name": "AI Image Detector",
  "version": "1.0",
  "description": "Detect AI-generated and deepfake images on web pages",
  "permissions": ["activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "backend.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"],
      "match_about_blank": true
    }
  ]
}