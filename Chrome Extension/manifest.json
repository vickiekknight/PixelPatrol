{
  "manifest_version": 3,
  "name": "Image Detector",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "backend.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["popup.js"]
    }
  ],
  "host_permissions": [
    "*://www.instagram.com/*",
    "http://127.0.0.1:5000/*"
  ]
}


